{% extends '_layouts/content-simple.nunjucks' %}

{% set title = 'Components' %}

{% block main_content %}
  <div class="page-section">
    {% for filename, component in componentsData %}
      <h2>{{ component.name }} component</h2>

      {% for component in component.variants %}
        {{ components[component.type | snakecase](component.props) }}

        {% if not loop.last %}
          <hr>
        {% endif %}
      {% endfor %}
    {% endfor %}
  </div>
{% endblock %}
